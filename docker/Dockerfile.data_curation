FROM python:3.11-slim as builder

WORKDIR /app

# 1. Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# 2. Install Rust for building dependencies
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH=/root/.cargo/bin:$PATH

# 3. Install Poetry in its own virtual environment under /opt/poetry
ENV POETRY_VERSION=1.7.1
ENV POETRY_HOME=/opt/poetry
ENV POETRY_CACHE_DIR=/opt/.cache
ENV PIP_NO_CACHE_DIR=1
ENV PIP_DISABLE_PIP_VERSION_CHECK=1

RUN python -m venv /opt/poetry && \
    /opt/poetry/bin/pip install --upgrade pip && \
    /opt/poetry/bin/pip install "poetry==${POETRY_VERSION}" && \
    ln -s /opt/poetry/bin/poetry /usr/local/bin/poetry

# 4. Copy dependency files
COPY pyproject.toml poetry.lock ./

# 5. Create your application virtual environment in /app/.venv
RUN python -m venv /app/.venv
ENV VIRTUAL_ENV=/app/.venv
ENV PATH="/app/.venv/bin:$PATH"

# 6. Upgrade pip in the new venv
RUN pip install --upgrade pip

# 7. (NEW) Instruct Poetry to use /app/.venv/bin/python as its interpreter
RUN poetry env use /app/.venv/bin/python  # NEW

# 8. Now install dependencies via Poetry (no dev, no project root)
RUN poetry install --no-interaction --no-ansi --no-root --no-dev

# ------------------------------------------------------------------------------
# Final stage: minimal image
FROM python:3.11-slim

WORKDIR /app

# Copy the venv from the builder stage
COPY --from=builder /app/.venv /app/.venv
ENV VIRTUAL_ENV=/app/.venv
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONPATH="/app:$PYTHONPATH"

# Copy only necessary source code
COPY ./apps/data_curation ./apps/data_curation
COPY ./shared ./shared

# Create necessary directories and install ffmpeg in a single layer
RUN mkdir -p /app/data/assets \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
       ffmpeg \
    && rm -rf /var/lib/apt/lists/*

EXPOSE 8001

CMD ["uvicorn", "apps.data_curation.main:app", "--host", "0.0.0.0", "--port", "8001"]
